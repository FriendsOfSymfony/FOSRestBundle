<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fos_rest.converter.query_string" class="FOS\RestBundle\Request\QueryStringParamConverter" public="false">
            <argument type="service" id="serializer"/>
            <argument type="service" id="fos_rest.validator" on-invalid="ignore" />
            <tag name="request.param_converter" converter="fos_rest.query_string" priority="-50"/>
        </service>

    </services>
</container>
