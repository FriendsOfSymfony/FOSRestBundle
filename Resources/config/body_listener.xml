<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="fos_rest.decoder.json" class="%fos_rest.decoder_json.class%" />

        <service id="fos_rest.decoder.xml" class="%fos_rest.decoder_xml.class%" />

        <service id="fos_rest.body_listener" class="%fos_rest.body_listener.class%">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
            <argument>%fos_rest.decoders%</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

    </services>
</container>
