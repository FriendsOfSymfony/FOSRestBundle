<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fos_rest.flash_message_listener.class">FOS\RestBundle\EventListener\FlashMessageListener</parameter>
    </parameters>

    <services>

        <service id="fos_rest.flash_message_listener" class="%fos_rest.flash_message_listener.class%">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
            <argument type="service" id="session"/>
            <argument>%fos_rest.flash_message_listener.options%</argument>
        </service>

    </services>
</container>
